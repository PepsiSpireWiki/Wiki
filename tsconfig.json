{
    "compilerOptions": {
        "allowJs": true,
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "jsx": "preserve",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "lib": [
            "ESNext",
            "DOM"
        ],
        "skipLibCheck": true,
        "noEmit": true,
        "paths": {
            "@/*": [
                "./.vitepress/*"
            ]
        },

        "types": [ ]
    },
    "include": [
        "docs/**/*.ts",
        "docs/**/*.d.ts",
        "docs/**/*.tsx",
        "docs/**/*.vue",
        "typings/**/*.d.ts",
        "components.d.ts"
    ],
    "exclude": [
        "**/node_modules/**",
        "**/.vitepress/dist/**"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}